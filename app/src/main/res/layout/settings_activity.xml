<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/tv_change_password_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/custom_buttom"
        android:text="@string/change_password_settings"
        android:padding="15dp"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <ImageView
        android:id="@+id/iv_arrow_down_settings"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintBottom_toBottomOf="@+id/tv_change_password_settings"
        app:layout_constraintEnd_toEndOf="@+id/tv_change_password_settings"
        app:layout_constraintTop_toTopOf="@+id/tv_change_password_settings" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_change_password_settings"
        android:background="@drawable/custom_cl_settings"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_change_password_settings"
        app:layout_constraintStart_toStartOf="@+id/tv_change_password_settings"
        app:layout_constraintTop_toBottomOf="@+id/tv_change_password_settings">

        <TextView
            android:id="@+id/tv_current_password_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_password_settings"
            android:visibility="invisible"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ed_current_password_settings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/current_password_settings"
            android:textAlignment="center"
            android:maxLength="12"
            android:inputType="number"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_current_password_settings" />

        <TextView
            android:id="@+id/tv_new_password_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="@string/new_password_settings"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/ed_current_password_settings"
            app:layout_constraintTop_toBottomOf="@+id/ed_current_password_settings" />

        <EditText
            android:id="@+id/ed_new_password_settings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edit_text"
            android:maxLength="12"
            android:inputType="number"
            android:hint="@string/new_password_settings"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/ed_current_password_settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_new_password_settings" />

        <TextView
            android:id="@+id/tv_confirm_password_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/confirm_password_settings"
            android:visibility="invisible"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_new_password_settings" />

        <EditText
            android:id="@+id/ed_confirm_password_settings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/confirm_password_settings"
            android:textAlignment="center"
            android:maxLength="12"
            android:textColor="@color/colorPrimary"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/tv_confirm_password_settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_confirm_password_settings" />

        <Button
            android:id="@+id/btn_change_password_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_buttom"
            android:text="@string/button_change_password_settings"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/ed_confirm_password_settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_confirm_password_settings" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>